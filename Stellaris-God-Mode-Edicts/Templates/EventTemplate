## {{edictName}}
country_event = { 

  id = godEdict_toggle.{{idOn}}
   hide_window = yes
   is_triggered_only = yes

     immediate = {
            root = {
                add_modifier = {
                    modifier = godEdict_{{edictName}}
                    days = -1
                }
                set_country_flag = flag_godEdict_{{edictName}}_on
          }
     }
}

country_event = {
  id = godEdict_toggle.{{idOff}}
   hide_window = yes
    is_triggered_only = yes

   immediate = {
       root = {
            remove_modifier = godEdict_{{edictName}}
            remove_country_flag = flag_godEdict_{{edictName}}_on 
        }
   }
};